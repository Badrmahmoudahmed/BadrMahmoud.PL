@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1 class="pb-5">Edit Department</h1>
<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Code" for="code" class="form-label"></label>
        <input asp-for="Code" id="code" class="form-control">
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" for="name" class="form-label"></label>
        <input asp-for="Name" id="name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateofCreation" for="DOC" class="form-label"></label>
        <input asp-for="DateofCreation" id="DOC" class="form-control">
    </div>
    <input type="submit" class="btn btn-outline-primary" value="Edit" />
    <a asp-action="Index" class="btn btn-outline-secondary">Back To List <= </a>
</form>

