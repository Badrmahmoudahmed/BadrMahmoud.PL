@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Employees";
}

<h1 class="text-center pb-4">Employees</h1>
<a asp-action="Create" class="btn btn-success mb-4">Create New Employee</a>
@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(E => E.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(E => E.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(E => E.Salary)</th>
                    <th scope="col">@Html.DisplayNameFor(E => E.Department)</th>
                    <th scope="col">@Html.DisplayNameFor(E => E.Gender)</th>
                    <th scope="col">@Html.DisplayNameFor(E => E.Email)</th>
                    <th scope="col">Details</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Employee in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(M => Employee.Name)</td>
                        <td>@Html.DisplayFor(M => Employee.Age)</td>
                        <td>@Html.DisplayFor(M => Employee.Salary)</td>
                        <td>@Html.DisplayFor(M => Employee.Department.Name)</td>
                        <td>@Html.DisplayFor(M => Employee.Gender)</td>
                        <td>@Html.DisplayFor(M => Employee.Email)</td>
                        <partial name="ButtonsViewPartial" model="@Employee.Id">
                    </tr>

                  
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        There Is No Employees ^_^
    </div>





}



















