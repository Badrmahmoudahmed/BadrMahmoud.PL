@model Employee
@{
    ViewData["Title"] = "Create";
}
<h1 class="pb-5">Create New Employee</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" for="Name" class="form-label"></label>
        <input asp-for="Name" id="Name" class="form-control" >
    </div>
    <div class="form-group">
        <label asp-for="Age" for="Age" class="form-label"></label>
        <input asp-for="Age" id="Age" class="form-control">
        <span asp-validation-for="Age"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" for="Salary" class="form-label"></label>
        <input asp-for="Salary" id="Salary" class="form-control">
    </div>
    <div class="form-group">
        <input asp-for=Gender id="male" type="radio" name="gender" value="1" >
        <label asp-for="Gender" for="male" class="form-label">Male</label>
        <input asp-for=Gender id="Female" type="radio" name="gender" value="2" >
        <label asp-for="Gender" for="Female" class="form-label">Female</label>
    </div>
    <div class="form-group">
        <label asp-for="Email" for="Email" class="form-label"></label>
        <input asp-for="Email" id="Email" class="form-control">
    </div>
    <input type="submit" class="btn btn-outline-primary" value="Create" />
    <a asp-action="Index" class="btn btn-outline-secondary">Back To List <= </a>
</form>

@section ValidationScriptSection
        {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}